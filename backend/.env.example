# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:4000

# Database
MONGODB_URI=mongodb://localhost:27017/vfxb

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Replicate API (for AI video processing)
REPLICATE_API_TOKEN=r8_your-replicate-token-here

# Cloudinary (for video storage and processing)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AssemblyAI (for transcription)
ASSEMBLYAI_API_KEY=your-assemblyai-key

# ElevenLabs (for voice synthesis)
ELEVENLABS_API_KEY=your-elevenlabs-key

# Runway ML (for advanced AI effects)
RUNWAY_API_KEY=your-runway-api-key

# File Upload Configuration
MAX_FILE_SIZE=500MB
UPLOAD_PATH=./uploads
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv,webm
ALLOWED_AUDIO_FORMATS=mp3,wav,aac,m4a

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@vfxb.com

# Webhook URLs (for processing notifications)
WEBHOOK_SECRET=your-webhook-secret
PROCESSING_WEBHOOK_URL=http://localhost:3001/api/webhooks/processing

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_VIDEO_PROCESSING=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ANALYTICS=true